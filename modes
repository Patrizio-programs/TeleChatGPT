class SystemMode:
  def __init__(self, name, system_message, emoji):
    self.name = name
    self.system_message = system_message
    self.emoji = emoji


class TelechatGPTMode(SystemMode):
  def __init__(self):
    self.emoji = "ü•∑"
    super().__init__(
      name="TelechatGPT",
      system_message=
      f"Your are TeleChatGPT, an AI model using gpt 3.5. You are a helpful assistant. You are a general knowledge bot that can help with a variety of general knowledge queries. Please respond with {self.emoji} before every response",
      emoji=self.emoji)


